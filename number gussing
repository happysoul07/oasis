import java.util.Random;
import java.util.Scanner;

public class gussingnumber {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        Random random = new Random();



        int lowerBound = 1;
        int upperBound = 100;
        int maxAttempts = 5;
        int totalRounds = 3;
        int totalScore = 0;

        System.out.println("ðŸŽ‰ Welcome to Guess the Number Game! ðŸŽ‰");


        for (int round = 1; round <= totalRounds; round++) {
            int generatedNumber = random.nextInt(upperBound - lowerBound + 1) + lowerBound;
            int currentAttempt = 1;
            int roundScore = 0;

            System.out.println("Round " + round + ": Can you guess the number between " + lowerBound + " and " + upperBound + "?");
            System.out.println("random number is " +random);
            while (currentAttempt <= maxAttempts) {
                System.out.print("Enter your guess (Attempt " + currentAttempt + "/" + maxAttempts + "): ");
                int userGuess = scanner.nextInt();

                if (userGuess == generatedNumber) {
                    System.out.println("ðŸ¥³ Congrats! You guessed it right!");
                    roundScore += (maxAttempts - currentAttempt + 1) * 10; // Calculate round score
                    break;
                } else if (userGuess < generatedNumber) {
                    System.out.println("ðŸ‘‡ Too low. Try again!");
                } else {
                    System.out.println("ðŸ‘† Too high. Try again!");
                }

                currentAttempt++;
            }

            System.out.println("ðŸ”¢ The correct number was: " + generatedNumber);
            System.out.println("ðŸ† Your score for this round: " + roundScore);
            totalScore += roundScore;
        }

        System.out.println("Game over! Your total score after " + totalRounds + " rounds: " + totalScore);
        System.out.println("Thanks for playing! Goodbye!");
    }
}
